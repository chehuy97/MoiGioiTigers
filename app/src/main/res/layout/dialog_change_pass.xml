<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/Dialog_Theme"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp">
        <TextView
            style="@style/custom_text_view_change_pass"
            android:text="Current Password"/>
        <EditText
            android:id="@+id/edt_current_pass"
            style="@style/custom_edit_text_change_pass"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp">
        <TextView
            style="@style/custom_text_view_change_pass"
            android:text="New Password"/>
        <EditText
            android:id="@+id/edt_new_pass"
            style="@style/custom_edit_text_change_pass"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp">
        <TextView
            style="@style/custom_text_view_change_pass"
            android:text="Confirm Password"/>
        <EditText
            android:id="@+id/edt_confirm_pass"
            style="@style/custom_edit_text_change_pass"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btn_change_pass"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textColor="@color/colorRed"
            android:layout_marginLeft="20dp"
            android:text="Change"/>
        <Button
            android:id="@+id/btn_cancel_change_pass"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textColor="@color/colorRed"
            android:text="Cancel"/>
    </LinearLayout>
</LinearLayout>