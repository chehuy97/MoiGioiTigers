<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Thêm bài đăng mới"
            android:textAllCaps="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorRed"
            android:textSize="30dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                style="@style/TextView_Add_Post"
                android:textSize="18dp"
                android:layout_marginTop="13dp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:text="Tiêu đề :" />

            <EditText
                android:id="@+id/edt_title"
                android:layout_marginRight="35dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                style="@style/TextView_Add_Post"
                android:text="Nội dung :"
                android:textSize="18dp"
                android:layout_marginTop="13dp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/edt_description"
                android:layout_marginRight="35dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                style="@style/TextView_Add_Post"
                android:textSize="18dp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:text="Diện Tích (m2) :" />

            <EditText
                android:id="@+id/edt_area"
                android:layout_marginRight="35dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                style="@style/TextView_Add_Post"
                android:text="Giá Tiền :"
                android:textSize="18dp"
                android:layout_marginTop="13dp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edt_cost"
                android:layout_width="280dp"
                android:layout_height="match_parent" />

            <Spinner
                android:id="@+id/sp_id_currency"
                android:layout_width="80dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <TextView
                style="@style/TextView_Add_Post"
                android:textSize="18dp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:text="Địa chỉ" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:textSize="18dp"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:text="Tỉnh: " />

                    <Spinner
                        android:id="@+id/sp_province"
                        android:layout_width="match_parent"
                        android:layout_marginRight="20dp"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:textSize="18dp"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:text="Huyện :" />

                    <Spinner
                        android:id="@+id/sp_district"
                        android:layout_marginRight="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:textSize="18dp"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:text="Xã :" />

                    <Spinner
                        android:id="@+id/sp_ward"
                        android:layout_marginRight="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                style="@style/TextView_Add_Post"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:text="Phân loại" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        style="@style/TextView_Add_Post"
                        android:textSize="18dp"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:text="Loại chung :" />

                    <Spinner
                        android:id="@+id/sp_catalog"
                        android:layout_marginRight="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        style="@style/TextView_Add_Post"
                        android:textSize="18dp"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:text="Chi tiết :" />

                    <Spinner
                        android:id="@+id/sp_catalog_detail"
                        android:layout_marginRight="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                style="@style/TextView_Add_Post"
                android:textSize="18dp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:text="Chủ sỡ hữu :" />
            <Spinner
                android:id="@+id/sp_owner"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/TextView_Add_Post"
                android:textSize="18dp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:text="Hình ảnh" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_preview"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="250dp"
                    android:layout_height="250dp" />

                <Button
                    android:id="@+id/btn_upload_image"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/radius"
                    android:text="Upload ảnh" />

            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btn_add_new_post"
            android:background="@drawable/radius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Thêm bài đăng mới"/>
    </LinearLayout>
</ScrollView>